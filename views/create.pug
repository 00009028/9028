extends layout.pug 

block content  
    .container
        h1 Create To-Do 

        if error 
            p.error To-do app title or description cannot be empty! Try again!

        if success 
            p.success To-do is created successfully!

        form.form(action='/create' method='POST')
            label Title
            input.input(type='text' name='title')

            label Description 
            textarea.input(type="text" name="description") 

            button.btn Create to-do